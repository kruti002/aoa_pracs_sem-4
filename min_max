#include<stdio.h>
void min_max(int i;int j;int a[10])
{
    if(i==j)
    {
        min=max=a[i];
    }
    if(i==j-1)
    {
        if(a[i]>a[j])
        {
            min=a[j];
            max=a[i];
        }
    }
    
}
void main()
{   int i,n;
    printf("enter the length of the array to be sorted:");
    scanf("%d",&n);
    printf("enter the array to be sorted using min-max algorithm:");
    for(i=0;i<n;i++)
    {
    scanf("%d",&a[i]);
    }
    
}
